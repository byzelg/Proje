@model Proje.Models.Author
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        YAZAR EKLEME
                    </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    @using (Html.BeginForm("Create", "Author", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <!--begin içindeki,gidilecek adresi belirtir. view,controller,formmetodu,resmin karşıya ulaşması için gerekli kod-->
                        <label for="email_address">Resim</label>
                        <div class="form-group">
                            <div class="form-line">
                                <input type="file" id="File" name="File" accept=".jpg,.JPG,.png,.PNG,.JPEG,.jpeg" class="form-control">
                            </div>
                        </div>

                        <label for="email_address">Ad Soyad</label>
                        <div class="form-group">
                            <div class="form-line">
                                @Html.EditorFor(model => model.NameSurname, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @required = "required" } }) <!--required -> alanın boş geçilmemesi için kullanılır-->
                            </div>
                        </div>

                        <label for="email_address">Email Adres</label>
                        <div class="form-group">
                            <div class="form-line">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @required = "required" } })
                            </div>
                        </div>

                        <label for="password">Parola</label>
                        <div class="form-group">
                            <div class="form-line">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @required = "required" , @type = "password"} })
                            </div>
                        </div>

                        <label for="email_address">Hakkında</label>
                        <div class="form-group">
                            <div class="form-line">
                                @Html.EditorFor(model => model.About, new { htmlAttributes = new { @class = "form-control", @maxlength = "150", @required = "required" } })
                            </div>
                        </div>

                        <div class="form-group">

                            @Html.RadioButton("Role", "Kullanıcı", new { @id = "user" })
                            <label for="user" class="m-l-20">Yazar</label>
                        </div>


                        <br>
                        <div align="center">
                            <input type="submit" class="btn btn-success m-t-15 waves-effect" value="KAYIT" />
                        </div>
                        
                    }
                </div>
            </div>
        </div>
    </div>

